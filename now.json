{
    "version": 2,
    "name": "meal-planner",
    "regions": ["lhr1"],
    "builds": [
        {
            "src": "frontend/next.config.js",
            "use": "@now/next"
        },
        {
          "src": "backend/**/*.js",
          "use": "@now/node"
        }
    ],
    "routes": [
        {
            "src": "/api/food/(.+)",
            "methods": ["GET"],
            "dest": "backend/routes/food/specific.js?id=$1"
        },
        {
            "src": "/api/food/",
            "methods": ["POST"],
            "dest": "backend/routes/food/create.js"
        },
        {
            "src": "/api/food/(.*)",
            "methods": ["GET", "POST", "PUT", "DELETE"],
            "dest": "backend/routes/food/$1"
        },
        {
            "src": "/api/users/(.+)",
            "methods": ["GET"],
            "dest": "backend/routes/users/specific.js?id=$1"
        },
        {
            "src": "/api/users/(.+)",
            "methods": ["PUT"],
            "dest": "backend/routes/users/update.js?id=$1"
        },
        {
            "src": "/api/users/",
            "methods": ["POST"],
            "dest": "backend/routes/users/create.js"
        },
        {
            "src": "/api/users/",
            "methods": ["GET"],
            "dest": "backend/routes/users/list.js"
        },
        {
            "src": "/api/(.*)",
            "methods": ["GET", "POST", "PUT", "DELETE"],
            "dest": "backend/routes/$1"
        },
        {
            "src": "/(.*)",
            "methods": ["GET"],
            "dest": "frontend/$1"
        }
    ],
    "env": {
        "JWT_SECRET": "@jwtsecret",
        "MONGODB_URI": "@mongodb_uri",
        "MONGODB_NAME": "@mongodb_name",
        "MONGODB_USER": "@mongodb_user",
        "MONGODB_PASS": "@mongodb_pass"
    }
}