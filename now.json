{
    "version": 2,
    "name": "meal-planner",
    "regions": ["lhr1"],
    "builds": [
        {
            "src": "frontend/next.config.js",
            "use": "@now/next"
        },
        {
          "src": "backend/**/*.js",
          "use": "@now/node"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/backend/routes/$1"
        },
        {
            "src": "/(.*)",
            "dest": "/frontend/$1",
            "headers": {
                "cache-control": "s-maxage=31536000, maxage=0, stale-while-revalidate"
            }
        }
    ]
}