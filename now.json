{
    "version": 2,
    "name": "meal-planner",
    "regions": ["lhr1"],
    "builds": [
        {
            "src": "frontend/next.config.js",
            "use": "@now/next"
        },
        {
          "src": "backend/**/*.js",
          "use": "@now/node"
        }
    ],
    "routes": [
        {
            "src": "/api/food/(.+)",
            "dest": "backend/routes/food/specific.js?id=$1"
        },
        {
            "src": "/api/(.*)",
            "dest": "backend/routes/$1"
        },
        {
            "src": "/(.*)",
            "dest": "frontend/$1"
        }
    ],
    "env": {
        "JWT_SECRET": "@jwtsecret",
        "MONGODB_URI": "@mongodb_uri",
        "MONGODB_NAME": "@mongodb_name"
    }
}